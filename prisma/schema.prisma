// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  engineType      = "binary"
  previewFeatures = ["fieldReference"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id           String       @id @default(uuid())
  name         String
  slug         String       @unique
  price        Int
  costPrice    Int
  description  String[]
  brand        String
  pet          String?
  specie       String?
  type         String?
  imageUrl     String[]
  breedSize    String[]
  line         String?
  age          String[]
  size         String
  inventory    Int
  barcode      String?      @unique
  categories   Categories[]
  registeredAt DateTime     @default(now())

  @@map("products")
}

model Categories {
  id       String     @id @default(uuid())
  name     String
  products Products[]

  @@map("categories")
}
